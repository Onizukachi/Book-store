<%= turbo_frame_tag(dom_id(product)) do %>
  <li class="flex mb-6 <%= 'line-item-highlight' if defined?(updated) %>"> 
    <%= link_to line_items_path(product_id: product.id), data: { turbo_method: :post }, class: 'flex mr-6' do %>
      <%= image_tag(product.image_url, style: "width: 460px") %>
    <% end %>
    <div>
      <h2 class="font-bold text-lg mb-3"><%= product.title %></h2>
      <p>
        <%= sanitize(product.description) %>
      </p>

      <div class="mt-3">
        <%= number_to_currency(product.price) %>
        <%= button_to t(".add_html"), line_items_path(product_id: product.id), form_class: 'inline', class: 'ml-4 rounded-lg py-1 px-2 text-white bg-green-600' %>
      </div>
    </div>   
  </li>
<% end %>