<div class='w-full'>
  <%= render 'notice' %>

  <h1 class="font-bold text-center text-2xl mb-10 pb-2 border-b-2">
    <%= t('.title_html') %>
  </h1>

  <%= turbo_stream_from "products", channel: ProductsChannel %>
  <%= turbo_stream_from "carts" %>

  <ul>
    <% cache @products do %>
      <% @products.each do |product| %>
        <% cache product do %>
          <%= render partial: 'product', object: product %>
        <% end %>
      <% end %>
    <% end %>
  </ul>
</div>
