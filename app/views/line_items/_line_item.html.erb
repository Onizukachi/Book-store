<tr id="<%= dom_id(line_item) %>" class=<%= @current_item == line_item ? 'line-item-highlight' : '' %>>
  <td class='text-right'>
    <%= line_item.quantity %>
  </td>
  <td>&times;</td>
  <td class='pr-2'><%= line_item.product.title %></td>
  <td class='font-bold text-right'>
    <%= number_to_currency(line_item.total_price) %>
  </td>
  <td class='pl-2'>
  <%= link_to line_item, data: { turbo_method: :delete }, class: 'text-[34px] text-stone-600' do %>
    <div class='border hover:bg-red-500 w-6 h-6 rounded-lg flex items-center justify-center pb-1'>-</div>
  <% end %>
  </td>
</tr>
